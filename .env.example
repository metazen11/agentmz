# Workflow Hub v2 Configuration
# Copy to .env and customize as needed

# Database
DATABASE_URL=postgresql://wfhub:change-me@localhost:5433/agentic
POSTGRES_USER=wfhub
POSTGRES_PASSWORD=change-me
POSTGRES_DB=agentic

# Ollama LLM
OLLAMA_URL=https://wfhub.localhost/ollama
OLLAMA_API_BASE=https://wfhub.localhost/ollama

# Public domains
APP_URL=https://wfhub.localhost
MAIN_API_URL=https://wfhub.localhost

# Vision (image descriptions via Ollama)
VISION_MODEL=qwen2.5vl:7b
# VISION_MODELS=gemma3:4b,qwen2.5vl:7b
# VISION_API_URL=  # Optional override; defaults to $OLLAMA_API_BASE/api/chat
VISION_MODEL_REGEX=(^|[\\/:_-])(vl|vision|llava|mllama|moondream|minicpm-v|qwen2\\.5vl|qwen2-vl|qwen-vl|clip)
VISION_TIMEOUT=20
VISION_MAX_TOKENS=120
VISION_IMAGE_MAX_SIZE=640

# Aider Configuration (for code edits)
AIDER_MODEL=ollama_chat/qwen3:0.6b
AIDER_API_URL=https://wfhub.localhost/aider

# Agent Configuration (for orchestration)
AGENT_MODEL=qwen3:0.6b
AGENT_TIMEOUT=120
MAX_ITERATIONS=20

# Ports
FASTAPI_PORT=8002
AIDER_API_PORT=8001

# Workspaces
WORKSPACES_DIR=workspaces
DEFAULT_WORKSPACE=poc

# Attachments
UPLOADS_DIR=uploads
ATTACHMENT_MAX_BYTES=10485760

# Project root for self-editing (dogfooding)
PROJECT_ROOT=/mnt/c/dropbox/_coding/agentic/v2

# Git identity (for aider workspace repos)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=you@example.com
